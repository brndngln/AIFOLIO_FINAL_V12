{
  "name": "Rotate OpenAI Key (Omnilock)",
  "nodes": [
    {
      "parameters": {
        "cronExpression": "0 4 * * *",
        "timezone": "UTC"
      },
      "name": "Daily Trigger",
      "type": "n8n-nodes-base.cron",
      "typeVersion": 1,
      "position": [200, 300]
    },
    {
      "parameters": {
        "command": "python3 security/rotate_secret.py"
      },
      "name": "Rotate Secret Script",
      "type": "n8n-nodes-base.executeCommand",
      "typeVersion": 1,
      "position": [400, 300]
    },
    {
      "parameters": {
        "chatId": "@AIFOLIO_ALERTS",
        "message": "[AIFOLIO OMNILOCK] OpenAI key rotated. Check logs for status.",
        "options": {}
      },
      "name": "Send Telegram Alert",
      "type": "n8n-nodes-base.telegram",
      "typeVersion": 1,
      "position": [600, 300]
    }
  ],
  "connections": {
    "Daily Trigger": {
      "main": [[{ "node": "Rotate Secret Script", "type": "main", "index": 0 }]]
    },
    "Rotate Secret Script": {
      "main": [[{ "node": "Send Telegram Alert", "type": "main", "index": 0 }]]
    }
  }
}
