{
    "version": "1.0",
    "safety_policies": {
        "content_filtering": {
            "enabled": true,
            "rules": [
                {
                    "type": "prohibited_keywords",
                    "keywords": [
                        "harm",
                        "violence",
                        "malware",
                        "exploit",
                        "attack"
                    ]
                },
                {
                    "type": "length_limits",
                    "max_tokens": 4000,
                    "max_requests_per_minute": 60
                },
                {
                    "type": "content_validation",
                    "checks": [
                        "profanity",
                        "malicious_content",
                        "copyright_violation"
                    ]
                }
            ]
        },
        "rate_limiting": {
            "enabled": true,
            "limits": {
                "requests_per_minute": 60,
                "burst_limit": 5,
                "window_size_seconds": 60
            }
        },
        "memory_management": {
            "enabled": true,
            "limits": {
                "max_memory_usage_mb": 1000,
                "cache_ttl_seconds": 300,
                "max_cache_size_items": 1000
            }
        },
        "logging": {
            "enabled": true,
            "levels": {
                "error": true,
                "warning": true,
                "info": true,
                "debug": false
            },
            "audit_trail": true
        },
        "error_handling": {
            "enabled": true,
            "strategies": {
                "retry": {
                    "max_attempts": 3,
                    "backoff_factor": 1.5
                },
                "fallback": {
                    "enabled": true,
                    "providers": [
                        "openai",
                        "huggingface"
                    ]
                }
            }
        },
        "monitoring": {
            "enabled": true,
            "metrics": [
                "request_rate",
                "error_rate",
                "response_time",
                "memory_usage",
                "cache_hits"
            ],
            "alert_thresholds": {
                "error_rate": 0.05,
                "response_time_ms": 1000,
                "memory_usage_mb": 800
            }
        }
    },
    "model_constraints": {
        "openai": {
            "temperature": {
                "min": 0,
                "max": 0.7
            },
            "max_tokens": 4000,
            "presence_penalty": 0.6,
            "frequency_penalty": 0.5
        },
        "huggingface": {
            "max_length": 512,
            "temperature": 0.7,
            "top_p": 0.9,
            "do_sample": true
        }
    },
    "system_integrity": {
        "enabled": true,
        "checks": {
            "startup_validation": true,
            "periodic_health_check": {
                "interval_seconds": 300
            },
            "resource_monitoring": true
        }
    }
}
