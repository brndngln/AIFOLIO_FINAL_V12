{
  "name": "Secret Usage Spike Alert",
  "nodes": [
    {
      "parameters": {
        "cronExpression": "0 * * * *",
        "timezone": "UTC"
      },
      "name": "Hourly Trigger",
      "type": "n8n-nodes-base.cron",
      "typeVersion": 1,
      "position": [200, 300]
    },
    {
      "parameters": {
        "functionCode": "const fs = require('fs');\nconst path = 'logs/usage_anomalies.json';\nif (fs.existsSync(path)) {\n  const logs = JSON.parse(fs.readFileSync(path, 'utf8'));\n  const recent = logs.slice(-1)[0];\n  if (recent && recent.event === 'spike_detected' && Date.now() - new Date(recent.timestamp).getTime() < 3600*1000) {\n    return [{ alert: true, key: recent.key, current: recent.current, avg: recent.avg }];\n  }\n}\nreturn [{ alert: false }];"
      },
      "name": "Check Usage Spike",
      "type": "n8n-nodes-base.function",
      "typeVersion": 1,
      "position": [400, 300]
    },
    {
      "parameters": {
        "chatId": "@AIFOLIO_ALERTS",
        "message": "[AIFOLIO OMNILOCK] Usage spike detected for {{$json["key"]}}: {{$json["current"]}} (avg {{$json["avg"]}})",
        "options": {}
      },
      "name": "Send Telegram Alert",
      "type": "n8n-nodes-base.telegram",
      "typeVersion": 1,
      "position": [600, 300]
    }
  ],
  "connections": {
    "Hourly Trigger": {
      "main": [[{"node": "Check Usage Spike", "type": "main", "index": 0}]]
    },
    "Check Usage Spike": {
      "main": [[{"node": "Send Telegram Alert", "type": "main", "index": 0}]]
    }
  }
}
