# AIFOLIO Elite System - Editor Configuration
# Ensures consistent coding styles across different editors and IDEs
# https://editorconfig.org/

root = true

# Default settings for all files
[*]
end_of_line = lf
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 100

# JavaScript/TypeScript files
[*.{js,jsx,ts,tsx}]
indent_size = 2
quote_type = single

# JSON files
[*.json]
indent_size = 2

# CSS/SCSS files
[*.{css,scss,sass}]
indent_size = 2

# HTML files
[*.{html,htm}]
indent_size = 2

# Markdown files
[*.{md,mdx}]
trim_trailing_whitespace = false
max_line_length = off

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2
end_of_line = lf

# Python files (for any Python scripts)
[*.py]
indent_size = 4

# Configuration files
[*.{toml,ini}]
indent_size = 2

# Package files
[package.json]
indent_size = 2

# Lock files (don't modify)
[{package-lock.json,yarn.lock,pnpm-lock.yaml}]
insert_final_newline = false
trim_trailing_whitespace = false
